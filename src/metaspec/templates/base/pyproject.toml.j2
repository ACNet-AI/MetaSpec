[project]
name = "{{ name }}"
version = "{{ version }}"
description = "{{ description }}"
readme = "README.md"
requires-python = ">=3.9"
license = {text = "MIT"}

authors = [
    {name = "{{ name }} Contributors"},
]

keywords = [
    "{{ domain }}",
    "spec-driven",
    "{{ entity.name | lower }}",
]

dependencies = [
    "typer>=0.9.0",
    "rich>=13.0.0",
    "pyyaml>=6.0",
    "jsonschema>=4.0.0",
{% if dependencies %}
{% for dep in dependencies %}
    "{{ dep }}",
{% endfor %}
{% endif %}
]

[project.optional-dependencies]
dev = [
    "pytest>=7.4.0",
    "pytest-cov>=4.1.0",
    "black>=23.0.0",
    "ruff>=0.1.0",
]

[project.scripts]
{{ package_name }} = "{{ package_name }}.cli:main"

[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[tool.metaspec]
# MetaSpec metadata - enables community to discover speckit capabilities
generated_by = "{{ metaspec_version }}"
domain = "{{ domain }}"
{% if lifecycle %}
lifecycle = "{{ lifecycle }}"
{% endif %}

# CLI commands provided by this speckit
{% if cli_commands %}
cli_commands = [{% for cmd in cli_commands %}"{{ cmd.name }}"{% if not loop.last %}, {% endif %}{% endfor %}]
{% else %}
cli_commands = []
{% endif %}

# Slash command system type (auto-detected from sources)
# Values: "generic" | "sds" | "sdd" | ["sds", "sdd"] | "none"
{% if slash_commands %}
{% set sd_types = namespace(list=[]) %}
{% for sc in slash_commands %}
  {% if sc.source.startswith('sdd/') and 'sdd' not in sd_types.list %}
    {% set _ = sd_types.list.append('sdd') %}
  {% elif sc.source.startswith('sds/') and 'sds' not in sd_types.list %}
    {% set _ = sd_types.list.append('sds') %}
  {% elif sc.source == 'generic' and 'generic' not in sd_types.list %}
    {% set _ = sd_types.list.append('generic') %}
  {% endif %}
{% endfor %}
{% if sd_types.list|length == 1 %}
sd_type = "{{ sd_types.list[0] }}"
{% elif sd_types.list|length > 1 %}
sd_type = {{ sd_types.list | tojson }}
{% else %}
sd_type = "none"
{% endif %}

# Slash commands provided by this speckit (for AI agents)
{% for sc in slash_commands %}
[[tool.metaspec.slash_commands]]
name = "{{ sc.name }}"
description = "{{ sc.description }}"
source = "{{ sc.source }}"

{% endfor %}
{% else %}
sd_type = "none"
# No slash commands defined
{% endif %}

[tool.setuptools]
package-dir = {"" = "src"}

[tool.black]
line-length = 88
target-version = ["py39"]

[tool.ruff]
line-length = 88
target-version = "py39"

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
addopts = ["-ra", "--cov={{ package_name }}", "--cov-report=term"]

# Generated by MetaSpec {{ metaspec_version }} on {{ date }}

