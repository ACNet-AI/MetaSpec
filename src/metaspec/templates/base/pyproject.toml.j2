[project]
name = "{{ name }}"
version = "{{ version }}"
description = "{{ description }}"
readme = "README.md"
requires-python = ">=3.9"
license = {text = "MIT"}

authors = [
    {name = "{{ name }} Contributors"},
]

keywords = [
    "{{ domain }}",
    "spec-driven",
    "{{ entity.name | lower }}",
]

dependencies = [
    "typer>=0.9.0",
    "rich>=13.0.0",
    "pyyaml>=6.0",
    "jsonschema>=4.0.0",
{% if dependencies %}
{% for dep in dependencies %}
    "{{ dep }}",
{% endfor %}
{% endif %}
]

[project.optional-dependencies]
dev = [
    "pytest>=7.4.0",
    "pytest-cov>=4.1.0",
    "black>=23.0.0",
    "ruff>=0.1.0",
]

[project.scripts]
{{ package_name }} = "{{ package_name }}.cli:main"

[build-system]
requires = ["setuptools>=61.0", "wheel"]
build-backend = "setuptools.build_meta"

[tool.metaspec]
# MetaSpec metadata - enables community to discover speckit capabilities
generated_by = "{{ metaspec_version }}"
domain = "{{ domain }}"
{% if lifecycle %}
lifecycle = "{{ lifecycle }}"
{% endif %}

# Command system type - updated during toolkit implementation
# Values: "generic" | "sds" | "sdd" | ["sds", "sdd"] | etc.
{% if slash_commands %}
# TODO: Calculate sd_type based on deployed slash commands
sd_type = "tbd"
{% else %}
sd_type = "none"
{% endif %}

# Deployed slash commands (populated during toolkit implementation)
{% if slash_commands %}
{% for sc in slash_commands %}
[[tool.metaspec.slash_commands]]
name = "{{ sc.name }}"
description = "{{ sc.description }}"
source = "{{ sc.source }}"

{% endfor %}
{% else %}
# No slash commands defined yet
# Will be added during toolkit implementation via /metaspec.sdd.implement
{% endif %}

[tool.setuptools]
package-dir = {"" = "src"}

[tool.black]
line-length = 88
target-version = ["py39"]

[tool.ruff]
line-length = 88
target-version = "py39"

[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = ["test_*.py"]
addopts = ["-ra", "--cov={{ package_name }}", "--cov-report=term"]

# Generated by MetaSpec {{ metaspec_version }} on {{ date }}

